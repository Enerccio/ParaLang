using SecondModule.Class4;

import cz.upol.vanusanik.paralang.runtime.wrappers.PrintStreamWrapper;

module HelloWorldModule {
	class SystemPrinter {
		var wrappedPrinter;
		var emptyLine = "";
		init(wp){
			inst.wrappedPrinter = PrintStreamWrapper->PrintStreamWrapper(wp);
		}
		print(object){
			wrappedPrinter->print(object);
		}
		println(object){
			print(object); lerp();
		}
		lerp(){
			wrappedPrinter->println(emptyLine);
		}
	}
	var out = new SystemPrinter(true);
	var err = new SystemPrinter(false);
	
	init(){
		
	}
	
	restricted run(){
		var foobaz = 3.14;
		out.println(foobaz + 20 * 4 / 2 % 3);
		
		out.println(true == true);
		out.println(true == 4);
		out.println(4 != true);
		out.println(3 < 10);
		out.println(3 > 10);
		out.println(3 >= 3);
		out.println(3 <= 3);
	}
};